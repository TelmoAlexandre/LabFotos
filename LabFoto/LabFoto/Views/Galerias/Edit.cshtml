@model LabFoto.Models.ViewModels.GaleriasCreateViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>
<hr />
<form asp-action="Edit" id="galeriasEditForm">
    <div class="ui form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Galeria.ID" />

        <div class="field">
            <label asp-for="Galeria.Nome"></label>
            <input asp-for="Galeria.Nome" />
            <span asp-validation-for="Galeria.Nome" class="text-danger"></span>
        </div>

        <div class="fields">
            <div class="ten wide field">
                <label asp-for="Galeria.ServicoFK"></label>
                <partial name="PartialViews/_ServicosDropdownPartialView" model="@Model.Servicos" />
                <span asp-validation-for="Galeria.ServicoFK" class="text-danger"></span>
            </div>
            <div class="six wide field">
                <label asp-for="Galeria.DataDeCriacao"></label>
                <input asp-for="Galeria.DataDeCriacao"/>
                <span asp-validation-for="Galeria.DataDeCriacao" class="text-danger"></span>
            </div>
        </div>

        <div class="field">
            <label asp-for="Galeria.Galerias_Metadados"></label>
            <div class="field" id="metadadosCB"></div>
            <div class="ui tiny basic blue button mt-0" onclick="showModal('modalNovoMetadado')"><i class="plus icon"></i><span class="ml-2">Novo Metadado</span></div>
        </div>
    </div>
    <div class="mt-3">
        <div class="ui primary button" onclick="confirmForm('galeriasEditForm')"><i class="save icon"></i><span class="ml-2">Guardar</span></div>
        <div class="ui button" onclick="modalCancel('modalCancel')"><span>Cancelar</span></div>
    </div>
</form>

<div class="ui basic mini modal" id="confirmarSubmit">
    <div class="content">
        <p>Tem a certeza que pretende editar a Galeria?</p>
    </div>
    <div class="actions">
        <div class="ui red basic cancel inverted button">
            <i class="remove icon"></i>
            Não
        </div>
        <div class="ui green ok inverted button">
            <i class="checkmark icon"></i>
            Sim
        </div>
    </div>
</div>

<div class="ui basic mini modal" id="modalCancel">
    <div class="content">
        <p>Tem a certeza que pretende cancelar?</p>
    </div>
    <div class="actions">
        <div class="ui red basic cancel inverted button">
            <i class="remove icon"></i>
            Não
        </div>
        <a class="ui green ok inverted button" href="/Galerias/Details/@Model.Galeria.ID">
            <i class="checkmark icon"></i>
            Sim
        </a>
    </div>
</div>

<div class="ui modal basic mini fluidCorners" id="modalNovoMetadado">
    <div class="content" id="newMetadadoForm">
        <div class="ui raised segment fluidCorners">
            <a class="ui blue ribbon label mb-3">Novo Metadado</a>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="galeriaId" value="@Model.Galeria.ID" id="galeriaId"/>

            <div class="ui form">
                <div class="field">
                    <label asp-for="Metadado.Nome"></label>
                    <input asp-for="Metadado.Nome" placeholder="Metadado" />
                    <span asp-validation-for="Metadado.Nome" class="text-danger"></span>
                </div>
                <div class="fields">
                    <div class="eight wide field"><button class="ui button fluid primary" onclick="createMetadadoOnGaleriasEdit('@Model.Galeria.ID')">Adicionar</button></div>
                    <div class="eight wide field"><span class="ui fluid button" onclick="hideModal()">Cancelar</span></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        jQuery(document).ready(function ($) {
            $('.ui.dropdown').dropdown(); // Activar as dropdows do semantic-ui
            $("#metadadosCB").html(smallLoader);

            $("#metadadosCB").load(siteUrl + "/Galerias/MetadadosDropdown/@Model.Galeria.ID", function () {
                $('.ui.dropdown').dropdown(); // Activar as dropdows do semantic-ui
            });
        });
    </script>
}
