@model LabFoto.Models.Tables.Galeria

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Galeria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeCriacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Servico)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Servico.Nome)
        </dd>
    </dl>
</div>

<div class="ui seven cards" id="thumbnails">
    @{
        if (Model.Fotografias != null)
        {
            @foreach (var foto in Model.Fotografias)
            {
                <div class="ui card">
                    <div class="ui placeholder" style="width:150px; height:150px;">
                        <div class="image"></div>
                    </div>
                </div>
            }
        }
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#thumbnails").load("/Galerias/Thumbnails/" + @Model.ID);
        });
    </script>
}
