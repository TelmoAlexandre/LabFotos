@model IEnumerable<LabFoto.Models.Tables.ServicoSolicitado>

@{
    if (Model.Count() != 0)
    {
        @foreach (var servSolic in Model)
        {
            <div class="row">
                <div class="sixteen wide column mb-0 mt-0" id="indexDetails_@servSolic.ID">
                    <div class="ui basic segment pb-0 pt-0">
                        <i class="paperclip icon pt-2"></i>
                        <span class="font-weight-bolder">@servSolic.Nome</span>
                        <div class="ui basic buttons right floated">
                            <div class="ui icon button btnEdit" data-toggle="tooltip" title="Editar" onclick="showEditIndex(@servSolic.ID, 'ServicosSolicitados')">
                                <i class="far fa-edit"></i>
                            </div>
                            @if (servSolic.Deletable)
                            {
                                <div class="ui icon button btnDelete" data-toggle="tooltip" title="Eliminar" onclick="confirmDelete(@servSolic.ID)">
                                    <i class="trash alternate outline icon"></i>
                                </div>
                            }
                        </div>

                    </div>
                </div>

                <div class="sixteen wide column mb-0 mt-0" id="indexEdit_@servSolic.ID" style="display:none;"></div>
            </div>
        }
    }
    else
    {
        <div class="my-lg-5 d-flex justify-content-center">
            <p class="font-weight-bolder">Não foram encontrados Serviços Solicitados.</p>
        </div>
    }
}