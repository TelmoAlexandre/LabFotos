@model LabFoto.Models.Tables.ServicoSolicitado

    <form asp-controller="ServicosSolicitados" asp-action="Create"
          data-ajax="true" data-ajax-method="POST"
          data-ajax-success="novoServSolic"
          data-ajax-mode="replace" data-ajax-update="#divFormNovoServSolic">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label font-weight-bold"></label>
            <input asp-for="Nome" class="form-control" placeholder="Serviço Solicitado" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6"><button type="submit" class="btn btn-block btn-primary">Adicionar</button></div>
            <div class="col-md-6"><span class="btn btn-block btn-secondary pointer" onclick="hideModal()">Cancelar</span></div>
        </div>
    </form>