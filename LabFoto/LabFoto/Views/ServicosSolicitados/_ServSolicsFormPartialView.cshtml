@model LabFoto.Models.Tables.ServicoSolicitado

<div class="ui raised segment fluidCorners">
    <a class="ui blue ribbon label mb-3">Novo Serviço Solicitado</a>
    <form asp-controller="ServicosSolicitados" asp-action="Create"
            data-ajax="true" data-ajax-method="POST"
            data-ajax-success="novoServSolic"
            data-ajax-mode="replace" data-ajax-update="#divFormNovoServSolic">
        <div class="ui form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" placeholder="Serviço Solicitado" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="fields">
                <div class="eight wide field"><button type="submit" class="btn btn-block btn-primary">Adicionar</button></div>
                <div class=" eight wide field"><span class="btn btn-block btn-secondary pointer" onclick="hideModal()">Cancelar</span></div>
            </div>
        </div>
    </form>
</div>