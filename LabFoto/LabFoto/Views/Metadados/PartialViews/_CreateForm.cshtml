@model LabFoto.Models.Tables.Metadado

<div class="ui raised segment fluidCorners">
    <span class="ui blue ribbon label mb-3">Novo Metadado</span>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="ui form">
        <div class="field">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" placeholder="Metadado" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="fields">
            <div class="eight wide field"><button class="ui button fluid primary" onclick="createMetadado()" id="btnMetadadoAdicionar">Adicionar</button></div>
            <div class="eight wide field"><span class="ui fluid button" onclick="hideModal()">Cancelar</span></div>
        </div>
    </div>
</div>