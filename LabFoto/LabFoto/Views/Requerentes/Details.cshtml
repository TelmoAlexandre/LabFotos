@model LabFoto.Models.Tables.Requerente

@{
    ViewData["Title"] = "Detalhes";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 align-content-center">
        <div class="card border mx-auto mt-5 mb-5">
            <div class="card-header h3">
                @Html.DisplayFor(model => model.Nome)

                <span class="float-right"><a class="btn float-right bg-light" href="/Requerentes/Edit/@Model.ID" data-toggle="tooltip" title="Editar"><i class="far fa-edit"></i></a></span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="card-title">@Html.DisplayNameFor(model => model.Email)</h5>
                        <p>
                            <i class="far fa-envelope"></i>
                            <span class="card-text"><a href="mailto:@Model.Email" style="text-decoration:none;">@Html.DisplayFor(model => model.Email)</a></span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5 class="card-title">@Html.DisplayNameFor(model => model.Telemovel)</h5>
                        <p>
                            <i class="fas fa-phone"></i>
                            <span class="card-text">@Html.DisplayFor(model => model.Telemovel)</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5 class="card-title">@Html.DisplayNameFor(model => model.Responsavel)</h5>
                        <p>
                            <i class="fas fa-user-tie"></i>
                            <span class="card-text">@Html.DisplayFor(model => model.Responsavel)</span>
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="h5 ml-2">Serviços</div>
<div class="ui grid">
    <div class="four wide column">
        <div class="ui vertical fluid tabular menu">
            @foreach (var ser in Model.Servicos)
            {
                <a class="item" id="list_nome" onclick="requerenteServicoDetails(`div_segment`, @ser.ID)" data-toggle="list" role="tab" aria-controls="home" href="#list-segment">@ser.Nome</a>
            }
        </div>
    </div>
    <div class="twelve wide stretched column">
        <div class="ui segment" id="list-segment" role="tabpanel" aria-labelledby="list_nome">
            <div id="div_segment"></div>
        </div>
    </div>
</div>


