@model LabFoto.Models.Tables.Requerente

<div class="ui raised segment fluidCorners">
    <a class="ui blue ribbon label mb-3">Novo Requerente</a>
    <form asp-controller="Requerentes" asp-action="Create"
          data-ajax="true" data-ajax-method="POST"
          data-ajax-success="novoRequerente"
          data-ajax-mode="replace" data-ajax-update="#newRequerenteForm">
        <div class="ui form">
            <div class="field">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" placeholder="Nome do Requerente" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="fields">
                <div class="eight wide field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" placeholder="exemplo@exemplo.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="eight wide field">
                    <label asp-for="Telemovel"></label>
                    <input asp-for="Telemovel" placeholder="Telemóvel" type="text" />
                    <span asp-validation-for="Telemovel" class="text-danger"></span>
                </div>
            </div>
            <div class="field">
                <label asp-for="Responsavel"></label>
                <input asp-for="Responsavel" placeholder="Responsável" />
                <span asp-validation-for="Responsavel" class="text-danger"></span>
            </div>
            <div class="fields">
                <div class="eight wide field"><button type="submit" class="ui fluid primary button">Adicionar</button></div>
                <div class="eight wide field"><span class="ui fluid button" onclick="hideModal()">Cancelar</span></div>
            </div>
        </div>
    </form>
</div>