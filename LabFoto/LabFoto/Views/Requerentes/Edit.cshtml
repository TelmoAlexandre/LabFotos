@model LabFoto.Models.Tables.Requerente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Requerente</h1>
<hr />

<div class="form-group">
    <div class="col-md-12" id="">
        <form asp-action="Edit" id="RequerentesEditForm">
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Nome" class="control-label font-weight-bold"></label>
                    <input asp-for="Nome" placeholder="Nome do Requerente" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <i class="fas fa-phone"></i>
                    <label asp-for="Telemovel" class="control-label font-weight-bold"></label>
                    <input asp-for="Telemovel" placeholder="Telemóvel" type="text" class="form-control" />
                    <span asp-validation-for="Telemovel" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4 mb-0">
                    <i class="far fa-envelope"></i>
                    <label asp-for="Email" class="control-label font-weight-bold"></label>
                    <input asp-for="Email" placeholder="exemplo@exemplo.com" class="form-control" />
                </div>
                <div class="form-group col-md-4 mb-0">
                    <i class="fas fa-user-tie"></i>
                    <label asp-for="Responsavel" class="control-label font-weight-bold"></label>
                    <input asp-for="Responsavel" placeholder="Responsável" class="form-control" />
                    <span asp-validation-for="Responsavel" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="form-group">
    <span class="btn btn-primary pointer"
          onclick="showConfirmationDialog('submitForm','RequerentesEditForm','Tem a certeza que prentende guardar?')">Guardar</span>
    <span class="btn btn-secondary pointer" onclick="showConfirmationDialog('unsavedChanges','/Requerentes')">Cancelar</span>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
