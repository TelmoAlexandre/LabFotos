@model LabFoto.Models.Tables.Tipo

<div class="ui raised segment fluidCorners">
    <a class="ui blue ribbon label mb-3">Novo Tipo</a>
    <form asp-controller="Tipos" asp-action="Create"
            data-ajax="true" data-ajax-method="POST"
            data-ajax-success="novoTipo"
            data-ajax-mode="replace" data-ajax-update="#divFormNovoTipo">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="ui form">
            <div class="field">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" placeholder="Tipo" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="fields">
                <div class="eight wide field"><button type="submit" class="ui fluid primary button">Adicionar</button></div>
                <div class="eight wide field"><span class="ui fluid button" onclick="hideModal()">Cancelar</span></div>
            </div>
        </div>
    </form>
</div>