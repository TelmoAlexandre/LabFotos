@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>Carregar ficheiros grandes</h1>
<h2>@ViewData["message"]</h2>

<form asp-controller="Home"
      asp-action="Upload"
      method="post"
      enctype="multipart/form-data">
    <input type="file" multiple name="files" id="gallery-photo-add" hidden />
    <div class="ui placeholder segment">
        <div class="ui icon header" id="noImages">
            <i class="images outline icon"></i>
            Ainda não foram carregadas imagens.
        </div>
        <div class="gallery"></div>
        <div class="inline">
            <div onclick="clickThisButton('gallery-photo-add')" class="ui primary button"> Adicionar Imagens</div>
            <button type="submit" class="ui green button">Carregar</button>
        </div>
    </div>
</form>
