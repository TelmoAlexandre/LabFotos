@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>Carregar ficheiros grandes</h1>

<form asp-controller="Home"
      asp-action="Upload"
      method="post"
      enctype="multipart/form-data">
    <input type="file" multiple name="files" id="gallery-photo-add" hidden />
    <div class="ui placeholder segment">
        <div class="ui icon header" id="noImages">
            <i class="images outline icon"></i>
            @if (ViewData["message"] == null)
            {
                <h3 id="inforCount">Ainda não foram carregadas imagens.</h3>
            }
            else
            {
                <h3 id="inforCount">@ViewData["message"]</h3>
            }
        </div>
        <div class="gallery"></div>
        <div class="inline">
            <div onclick="clickThisButton('gallery-photo-add')" class="ui primary button"> Adicionar Imagens</div>
            <button type="submit" id="submitImages" class="ui green button" disabled>Carregar</button>
        </div>
    </div>
</form>
