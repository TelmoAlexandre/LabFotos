@model LabFoto.Models.ViewModels.UsersIndexViewModel


@{
    if (Model.Users.Count() != 0)
    {
        foreach (var user in Model.Users)
        {
            <div class="ui raised segment mt-2 mb-3">
                <div class="ui grid stackable">
                    <div class="row">
                        <div class="ui three wide column left floated ml-2 mt-1" style="padding-bottom: 0px !important; height:40px !important;">
                            <div class="ml-1 mt-2">
                                <span class="font-weight-bold">@user.UserName</span>
                            </div>
                        </div>
                        <div class="ui five wide column left floated ml-2 mt-1" style="padding-bottom: 0px !important;">
                            <div class="ml-1 mt-2">
                                <span>
                                    @if (!@user.EmailConfirmed)
                                    {
                                        <i class="x icon red icon"></i>
                                        <span class="font-weight-bold text-danger">Email Não Confirmado</span>
                                    }
                                    else
                                    {
                                        <i class="check green circle icon"></i>
                                        <span class="font-weight-bold text-success">Email Confirmado</span>
                                    }
                                </span>
                            </div>
                        </div>
                        <div class="ui six wide column right floated mt-1">
                            @{
                                // Não mostrar a opção de eli
                                if (!user.Email.Equals(Model.AdminEmail) && !user.Email.Equals(User.Identity.Name))
                                {

                                    <div class="ui small icon basic buttons right floated">
                                        <div class="ui button">
                                            <i class="lock open icon"></i>
                                        </div>
                                        <div class="ui button">
                                            <i class="lock icon"></i>
                                        </div>
                                        <div onclick="confirmDelete('@user.Id')" class="ui button">
                                            <i class="trash alternate outline icon"></i>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="my-lg-5 d-flex justify-content-center">
            <p class="font-weight-bolder">Não foram encontrados utilizadores.</p>
        </div>
    }
}


