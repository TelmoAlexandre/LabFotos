@model LabFoto.Models.ViewModels.ContaOnedriveCreateViewModel
@{
    ViewData["Title"] = "Adicionar conta";
}
<h1>Conta Onedrive</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="ui form">
            <form asp-action="Create" id="contaOnedriveCreateForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Code" type="hidden">
                <div class="field">
                    <label asp-for="ContaOnedrive.Username" class="control-label"></label>
                    <input asp-for="ContaOnedrive.Username" name="Username" class="form-control" />
                    <span asp-validation-for="ContaOnedrive.Username" class="text-danger"></span>
                </div>
                <div class="field">
                    <label asp-for="ContaOnedrive.Password" class="control-label"></label>
                    <input asp-for="ContaOnedrive.Password" name="Password" class="form-control" />
                    <span asp-validation-for="ContaOnedrive.Password" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <div class="ui primary button" onclick="confirmForm('contaOnedriveCreateForm')"><i class="plus icon"></i><span class="ml-2">Adicionar conta</span></div>
                    <div class="ui button" onclick="modalCancel('modalCancel')"><span>Cancelar</span></div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="ui basic mini modal" id="confirmarSubmit">
    <div class="content">
        <p>Tem a certeza que pretende adicionar a conta Onedrive?</p>
    </div>
    <div class="actions">
        <div class="ui red basic cancel inverted button">
            <i class="remove icon"></i>
            Não
        </div>
        <div class="ui green ok inverted button">
            <i class="checkmark icon"></i>
            Sim
        </div>
    </div>
</div>

<div class="ui basic mini modal" id="modalCancel">
    <div class="content">
        <p>Tem a certeza que pretende cancelar?</p>
    </div>
    <div class="actions">
        <div class="ui red basic cancel inverted button">
            <i class="remove icon"></i>
            Não
        </div>
        <a class="ui green ok inverted button" href="~/ContasOnedrive/@ViewData["ReturnUrl"]">
            <i class="checkmark icon"></i>
            Sim
        </a>
    </div>
</div>

