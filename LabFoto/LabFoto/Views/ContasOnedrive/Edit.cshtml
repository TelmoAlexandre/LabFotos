@model LabFoto.Models.Tables.ContaOnedrive

@{
    ViewData["Title"] = $"Editar - {Model.Username}";
}

<h1>Editar</h1>

<h4>Conta Onedrive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="ui form">
            <form asp-action="Edit" id="contaOnedriveEditForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="field">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <label asp-for="Password" class="control-label"></label>
                <div class="input-group mb-2">
                    <input id="pwInput" value="@Model.Password" name="Password" type="password" class="form-control" style="width:0px !important; border-radius:0.285714rem 0 0 0.285714rem !important;" />
                    <div class="input-group-prepend loginPreEnds">
                        <div class="input-group-text pointer" style="border-radius:0 0.285714rem 0.285714rem 0 !important;" id="btnMostrar" data-toggle="tooltip" data-original-title="Ver Password" onclick="mostrarPW()">
                            <span>
                                <i class="eye icon"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
                <div class="mt-3">
                    <div class="ui primary button" onclick="confirmForm('contaOnedriveEditForm')"><i class="save icon"></i><span class="ml-2">Guardar</span></div>
                    <div class="ui button" onclick="modalCancel('modalCancel')"><span>Cancelar</span></div>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="ui basic mini modal" id="confirmarSubmit">
    <div class="content">
        <p>Tem a certeza que pretende editar a conta Onedrive?</p>
    </div>
    <div class="actions">
        <div class="ui red basic cancel inverted button">
            <i class="remove icon"></i>
            Não
        </div>
        <div class="ui green ok inverted button">
            <i class="checkmark icon"></i>
            Sim
        </div>
    </div>
</div>

<div class="ui basic mini modal" id="modalCancel">
    <div class="content">
        <p>Tem a certeza que pretende cancelar?</p>
    </div>
    <div class="actions">
        <div class="ui red basic cancel inverted button">
            <i class="remove icon"></i>
            Não
        </div>
        <a class="ui green ok inverted button" href="~/ContasOnedrive/@ViewData["ReturnUrl"]">
            <i class="checkmark icon"></i>
            Sim
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        mostrarPW = () => {

            var password = $('#pwInput')[0];
            var passwordBtn = $('#btnMostrar');
            if (password.type === "password") {

                password.type = "text";
                passwordBtn[0].children[0].children[0].className = `eye slash icon`;
                passwordBtn.attr("data-toggle", "tooltip");
                passwordBtn.attr("data-original-title", "Esconder Password");
            }
            else {
                password.type = "password";
                passwordBtn[0].children[0].children[0].className = `eye icon`;
                passwordBtn.attr("data-toggle", "tooltip");
                passwordBtn.attr("data-original-title", "Ver Password");
            }
        };

    </script>
}
